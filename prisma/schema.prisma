generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Agents {
  id         Int          @id @default(autoincrement())
  name       String
  email      String
  avatar     String
  properties Properties[]

  @@map("agents")
}

model Galleries {
  id         Int        @id @default(autoincrement())
  image      String
  propertyId Int
  property   Properties @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@map("galleries")
}

model Reviews {
  id         Int        @id @default(autoincrement())
  name       String
  avatar     String
  review     String
  rating     Float
  property   Properties @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId Int

  @@map("reviews")
}

enum Type {
  House
  Townhouse
  Condo
  Duplex
  Studio
  Villa
  Apartment
  Other
}

enum Facilities {
  Laundry
  Parking
  Gym
  Wifi
  Pet_Friendly
}

model Properties {
  id          Int          @id @default(autoincrement())
  name        String
  type        Type
  description String
  address     String
  price       Int
  area        Float
  bedrooms    Int
  bathrooms   Int
  geoLocation String
  rating      Float
  facilities  Facilities[]
  agentId     Int // Foreign key
  agent       Agents       @relation(fields: [agentId], references: [id], onDelete: Cascade)
  gallery     Galleries[]
  reviews     Reviews[]

  @@index([agentId])
  @@index([type])
  @@index([price])
  @@index([rating])
  @@map("properties")
}

model Url {
  id          Int    @id @default(autoincrement())
  image       String
  geoLocation String

  @@map("url")
}
